-- Criação da tabela alunos
CREATE TABLE IF NOT EXISTS alunos (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT NOT NULL,
    email TEXT UNIQUE NOT NULL,
    data_nascimento TEXT,
    matricula INTEGER UNIQUE NOT NULL,
    telefone TEXT
);


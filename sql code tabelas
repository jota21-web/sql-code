-- Criação da tabela professores
CREATE TABLE IF NOT EXISTS professores (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT NOT NULL,
    email TEXT UNIQUE NOT NULL,
    data_nascimento TEXT,
    telefone TEXT,
    departamento TEXT,
    salario REAL
);

-- Inserção de dados na tabela professores
INSERT INTO professores (nome, email, data_nascimento, telefone, departamento, salario) VALUES
('Carlos Alberto', 'carlos.alberto@universidade.com', '1975-08-15', '+5511999999999', 'Matemática', 7500.00),
